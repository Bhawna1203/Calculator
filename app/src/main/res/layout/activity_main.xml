<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#101010"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/inputtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/outputtext"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text=""
        android:textColor="#ECE8E8"
        android:textSize="40dp" />
    <TextView
        android:id="@+id/outputtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="right"
        android:paddingRight="10dp"
        android:layout_above="@id/LLL1"
        android:textColor="#E3DDDD"
        android:textSize="80dp"/>




    <LinearLayout
        android:id="@+id/LLL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_ac"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/btn_ac"/>

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_divide"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_divide"/>
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_start_bracket"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_start_bracket"/>
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_end_bracket"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_end_bracket"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_7"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/btn_7"/>

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_8"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_8"/>
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_9"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_9"/>
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_multiply"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_multiplication"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_4"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/btn_4"/>

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_5"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_5"/>
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_6"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_6"/>
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_substract"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_minus"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_1"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/btn_1"/>

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_2"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_2"/>
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_3"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_3"/>
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_add"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_plus"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:visibility="invisible"
                android:background="@drawable/btn_0"/>

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_0"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_0"/>
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_dot"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_dot"/>
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btn_equal"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_equal"/>
        </LinearLayout>


    </LinearLayout>




</RelativeLayout>